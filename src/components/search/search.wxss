.search-header {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
}

.icon {
  position: relative;
  top: 4rpx;
}

.search-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  margin-right: 24rpx;
  padding: 0 24rpx;
  height: 68rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
  border: 1rpx solid #d2d2d2;
  border-radius: 40rpx;
  transition: all .3s;
}

.cancelBtn {
  margin: 0;
  padding: 0;
  width: auto !important;
  height: 80rpx;
  line-height: 80rpx;
  color: #4fd2c2;
  text-align: center;
  font-size: 32rpx;
  font-weight: normal;
  background-color: transparent;
}