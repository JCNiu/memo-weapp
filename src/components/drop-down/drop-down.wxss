.drop-down-content {
  width: 100%;
  height: 100%;
}

.drop-down-header {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
}

.arrow {
  position: relative;
  top: 4rpx;
  left: 8rpx;
  border-width: 10rpx;
  border-style:  solid;
  border-color: #333 transparent transparent transparent;
  transition: all .3s;
}

.arrow.top {
  transform: rotate(180deg);
}

.scroll-view {
  width: 100%;
  max-height: calc(100% - 128rpx);
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 28rpx;
}

.row.active {
  color: #4fd2c2;
}

.row-left {
  display: flex;
  align-items: center;
  height: 100%;
}

.row-left-arrow{
  width: 36rpx;
}

.icon-arrow {
  position: relative;
  top: 3rpx;
}

.row-right {
  display: flex;
  align-items: center;
  height: 100%;
  color: #686868;
}

.row-right.active {
  color: #4fd2c2;
}

.btn-wrap {
  width: 100%;
  height: 100rpx;
}

.btn {
  margin: 24rpx auto;
  padding: 0;
  width: calc(100% - 64rpx) !important;
  height: 80rpx !important;
  line-height: 80rpx;
  color: #fff;
  background-color: #4fd2c2;
  border-radius: 40rpx;
}