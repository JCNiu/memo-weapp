.more-header {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
}

.icon {
  position: relative;
  top: 4rpx;
}

.more-content {
  padding: 12rpx 24rpx 24rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  color: #333;
  font-size: 28rpx;
  font-weight: normal;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.row {
  margin-top: 12rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}