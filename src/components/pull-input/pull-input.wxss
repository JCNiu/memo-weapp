.pull-input-content {
  padding: 24rpx 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 20rpx;
}

.title {
  margin-top: 12rpx;
  width: 100%;
  line-height: 2;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.input {
  margin: 24rpx 24rpx 0;
  padding: 0 24rpx;
  width: calc(100% - 48rpx);
  height: 88rpx;
  box-sizing: border-box;
  border: 1rpx solid #4fd2c2;
  border-radius: 20rpx;
}

.btn-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 24rpx 24rpx 0;
  width: calc(100% - 48rpx);
  height: 100rpx;
}

.btn {
  margin: 0;
  padding: 0;
  width: 48% !important;
  height: 80rpx !important;
  line-height: 80rpx;
  color: #fff;
  background-color: #4fd2c2;
  border-radius: 40rpx;
}
