.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.header {
  padding: 0 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.header-info {
  display: flex;
  justify-content: space-between;
  width: 100%;
  line-height: 2;
  color: #686868;
  font-size: 22rpx;
}

.header-cont {
  display: flex;
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  border-bottom: 1rpx solid #d2d2d2;
}

.header-cont-title {
  flex: 1;
  height: 100%;
  color: #555;
}

.content {
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
  padding: 0 24rpx;
  width: 100%;
  min-height: calc(100vh - 268rpx);
  box-sizing: border-box;
}

.content-info {
  width: 100%;
  line-height: 2;
  color: #686868;
  font-size: 22rpx;
}

.content-cont {
  flex: 1;
  width: 100%;
  height: 100%;
  line-height: 48rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 128rpx;
}

.btn {
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 48% !important;
  color: #fff;
  background-color: #686868;
}

.btn.primary {
  background-color: #4fd2c2;
}
