.container {
  position: relative;
  padding: 24rpx;
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  background-color: #fff;
  border-bottom: 1rpx solid #d2d2d2;
}

.header-left {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
}

.header-right {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
  color: #333;
}

.content {
  margin-top: 100rpx;
  padding: 12rpx 24rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
}

.memo-list {
  width: 100%;
}

.memo-item {
  margin-top: 24rpx;
  width: 100%;
}

.memo-title {
  display: flex;
  align-items: center;
  width: 100%;
  height: 64rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.memo-label {
  margin-right: 8rpx;
  padding: 4rpx 8rpx;
  color: #fff;
  font-size: 22rpx;
  white-space: nowrap;
  background-color: #4fd2c2;
  border-radius: 6rpx;
}

.memo-cont {
  color: #686868;
  font-size: 28rpx;
}

.memo-info {
  display: flex;
  align-items: center;
  line-height: 48rpx;
  color: #555;
  font-size: 24rpx;
}

.clock-o {
  display: flex;
  position: relative;
  top: 2rpx;
  margin-right: 8rpx;
}

.btn-wrap {
  position: fixed;
  right: 32rpx;
  bottom: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  z-index: 20;
}

.btn {
  position: relative;
  margin: 0;
  padding: 0;
  width: 100rpx !important;
  height: 100rpx !important;
  background-color: #4fd2c2;
  border-radius: 50%;
}

.btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60%;
  height: 6rpx;
  background-color: #fff;
  border: none;
  border-radius: 4rpx;
  transform: translate(-50%, -50%);
}

.btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  display: block;
  width: 6rpx;
  height: 60%;
  background-color: #fff;
  border: none;
  border-radius: 4rpx;
  transform: translate(-50%, -50%);
}
