.container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #fff;
}

.logo-wrap {
  width: 100%;
  height: 50vh;
}

.content {
  padding: 0 32rpx;
  width: 100%;
  height: 50vh;
  box-sizing: border-box;
  overflow: hidden;
}

.submit-btn-wrap {
  margin-top: 32rpx;
  width: 100%;
  height: 100rpx;
}

.submit-btn {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  background-color: #4fd2c2;
  border-color: #4fd2c2;
  border-radius: 8rpx;
}

.info {
  position: absolute;
  left: 0;
  bottom: 24rpx;
  width: 100%;
  height: 60rpx;
  color: #555;
  font-size: 28rpx;
  text-align: center;
  z-index: 5;
}

.info-btn {
  color: #ea3323;
}
