.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 28rpx;
  background-color: #4fd2c2;
}

.header-label {
  white-space: nowrap;
}

.header-cont {
  width: calc(100% - 150rpx);
}

.header-cont-item {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.banner {
  height: 250rpx;
}

.swiper {
  height: 100%;
}

.swiper-item-cont {
  display: flex;
  align-items: center;
  margin: 24rpx auto;
  padding: 0 12rpx;
  width: calc(100% - 48rpx);
  height: 202rpx;
  box-sizing: border-box;
  font-size: 40rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx 0 #d2d2d2;
}

.sic-info {
  line-height: 1.8;
  text-align: left;
  text-indent: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-wrap: break-word;
}

.classify {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.classify-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  width: 25%;
  color: #555;
  font-size: 28rpx;
  text-align: center;
}

.classify-item-logo {
  margin-bottom: 12rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #4fd2c2;
  border-radius: 50%;
}

.content {
  padding: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.cont-list {
  width: 100%;
}

.cont-list-itme {
  margin-top: 24rpx;
  padding: 12rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx 0 #d2d2d2;
}

.cli-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  color: #333;
  font-size: 28rpx;
}

.cli-header-title {
  max-width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.cli-header-label {
  color: #4fd2c2;
  font-weight: bold;
}

.cli-cont {
  height: 88rpx;
  line-height: 88rpx;
  color: #555;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
